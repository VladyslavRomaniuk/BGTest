@model Book

<div class="card shadow border-0 mt-5">
    <div class="card-header bg-secondary bg-gradient ml-0 py-4">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2 text-white">Book Info</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <table class="table table-bordered">
            <tr>
                <td style="width: 66.66%">Title</td>
                <td>@Model.Title</td>
            </tr>
            <tr>
                <td>Year Of Publication</td>
                <td>@Model.YearOfPublication</td>
            </tr>
            <tr>
                <td>Genre</td>
                <td>@Model.Genre</td>
            </tr>
        </table>
        <div class="row pt-2">
            <div class="col-6 col-md-3">
                <a asp-controller="Book" asp-action="Index" class="btn btn-outline-primary border form-control">Go To All Books</a>
            </div>
        </div>
    </div>
</div>